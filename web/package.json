{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true pnpm run build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "test": "vitest",
    "test:ci": "vitest --run",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "optimize:images": "node scripts/optimize-images.mjs",
    "optimize:families": "node scripts/optimize-images.mjs families",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "lighthouse": "lhci autorun --config=lighthouserc.json",
    "lighthouse:build": "pnpm run build && lhci autorun --config=lighthouserc.json"
  },
